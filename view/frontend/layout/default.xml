<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="form.subscribe">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Elatebrain_Gdpr::newsletter/subscribe.phtml</argument>
            </action>
            <container name="newsletter.form.additional.info" as="newsletter_form_additional_info"/>
        </referenceBlock>
        <referenceContainer name="newsletter.form.additional.info">
            <block class="Elatebrain\Gdpr\Block\Forms\Consent" name="newletter_form_gdpr_consent" template="Elatebrain_Gdpr::forms/consent.phtml">
                <action method="setForm">
                    <argument name="form" xsi:type="string">newsletter</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
